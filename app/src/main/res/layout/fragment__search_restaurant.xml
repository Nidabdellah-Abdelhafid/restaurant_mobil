<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".fragmentMune.Fragment_Search_restaurant">
    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/searchbyspecialite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search by specialite" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >
        <Button
    android:id="@+id/searchbyzone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Search by zone"/>


        <Button
        android:id="@+id/searchbyserie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search by serie"/>

        <ListView
            android:id="@+id/listrestaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
</LinearLayout>


</LinearLayout>